{
	"id": "nl.philips.hue",
	"version": "0.9.0",
	"compatibility": ">=0.1.0",
	"name": {
		"en": "Philips Hue"
	},
	"description": {
		"en": "Philips Hue app for Homey"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "bulb",
			"name": {
				"en": "Philips Hue Bulb",
				"nl": "Philips Hue Lamp"
			},
			"class": "light",
			"capabilities": [ "onoff", "brightness", "hue", "saturation", "temperature" ],
			"images": {
				"large": "assets/images/large.jpg",
				"small": "assets/images/small.jpg"
			},
			"pair": [
				{
					"id": "press_button"
				},
				{
					"id": "list_bulbs",
					"template": "list_devices",
					"navigation": {
						"next": "add_bulbs"
					}
				},
				{
					"id": "add_bulbs",
					"template": "add_devices"
				}
			]
		}
	],
	"dependencies": {
		"node-hue-api": "*"
	}
}