{
	"id": "nl.philips.hue",
	"version": "1.0.5",
	"compatibility": ">=0.8.33",
	"name": {
		"en": "Philips Hue"
	},
	"description": {
		"en": "Philips Hue for Homey"
	},
	"author": {
		"name": "Athom B.V."
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"category": "lights",
	"drivers": [
		{
			"id": "bulb",
			"name": {
				"en": "Philips Hue",
				"nl": "Philips Hue"
			},
			"class": "light",
			"capabilities": [ "onoff", "dim", "light_hue", "light_saturation", "light_temperature" ],
			"images": {
				"large": "drivers/bulb/assets/images/large.jpg",
				"small": "drivers/bulb/assets/images/small.jpg"
			},
			"pair": [
				{
					"id": "press_button"
				},
				{
					"id": "list_bulbs",
					"template": "list_devices",
					"navigation": {
						"next": "add_bulbs"
					}
				},
				{
					"id": "add_bulbs",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "shortAlert",
				"title": {
					"en": "Blink the light (short)",
					"nl": "Knipper de lamp (kort)"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "longAlert",
				"title": {
					"en": "Blink the light (long)",
					"nl": "Knipper de lamp (lang)"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "colorLoop",
				"title": {
					"en": "Play a colorloop effect",
					"nl": "Speel een kleur effect"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "setScene",
				"title": {
					"en": "Set a scene",
					"nl": "Activeer een scene"
				},
				"args": [
					{
						"name": "scene",
						"type": "autocomplete"
					}
				]
			},
			{
				"id": "allOff",
				"title": {
					"en": "Turn all lights off in a room",
					"nl": "Zet alle lampen uit in een ruimte"
				},
				"args": [
					{
						"name": "group",
						"type": "autocomplete"
					}
				]
			}
		]
	}
}
